<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.japanredsun.Controller.AdminPageController">
   <top>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Question List">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="btnNew" mnemonicParsing="false" text="New" />
                  <Button fx:id="btnUpdate" disable="true" mnemonicParsing="false" onAction="#ShowUpdateBox" text="Update" />
                  <Button fx:id="btnDelete" disable="true" mnemonicParsing="false" text="Delete" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <TableView fx:id="tbQuestion" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colId" minWidth="50.0" text="ID" />
          <TableColumn fx:id="colType" minWidth="100.0" text="Type" />
           <TableColumn fx:id="colParagraph" minWidth="200" text="Paragraph" />
           <TableColumn fx:id="colCreatedDate" minWidth="100" text="Created Date" />
           <TableColumn fx:id="colStatus" minWidth="100" text="Status" />
        </columns>
      </TableView>
   </center>
</BorderPane>
